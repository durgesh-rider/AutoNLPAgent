# Environment Configuration for AutoNLP-Agent
# Copy this file to .env and update the values

# Application Settings
APP_NAME=AutoNLP-Agent
DEBUG=False
VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=8000

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=uploads

# ML Settings
MAX_TRAINING_TIME=3600  # 1 hour in seconds
DEFAULT_BATCH_SIZE=16
DEFAULT_EPOCHS=3

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if implementing persistence)
# DATABASE_URL=sqlite:///./autonlp.db

# CORS Settings (comma-separated origins)
# ALLOWED_ORIGINS=http://localhost:8081,https://yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=autonlp.log
